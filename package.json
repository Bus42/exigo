{
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "build": "wsrun build",
    "clean": "wsrun clean",
    "develop": "netlify dev",
    "format": "prettier --ignore-path .gitignore --write \"**/*.{ts,tsx,js,json,yml,md}\"",
    "generate": "run-s generate:server generate:client",
    "generate:client": "graphql-codegen",
    "generate:server": "cd ./server/ && yarn generate",
    "lint": "eslint --ignore-path .gitignore \"**/!(*.generated*).{ts,tsx,js}\"",
    "postinstall": "yarn generate",
    "serve": "wsrun serve",
    "type-check": "wsrun type-check"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^1.8.3",
    "@graphql-codegen/near-operation-file-preset": "^1.8.3",
    "@graphql-codegen/typescript": "^1.8.3",
    "@graphql-codegen/typescript-operations": "^1.8.3",
    "@graphql-codegen/typescript-urql": "^1.8.3",
    "@typescript-eslint/eslint-plugin": "^2.7.0",
    "@typescript-eslint/parser": "^2.7.0",
    "eslint": "^6.6.0",
    "eslint-config-airbnb-typescript": "^6.3.0",
    "eslint-config-prettier": "^6.6.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-simple-import-sort": "^4.0.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.3",
    "netlify-cli": "^2.21.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "wsrun": "^5.1.0"
  }
}
